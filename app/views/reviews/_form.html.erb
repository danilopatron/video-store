<%= simple_form_for([@video, @video.reviews.build]) do |f| %>
	<div id="rating-form">
		<% f.input :rating %>
		<label>Rating</label>
	</div>
	<%= f.input :comment %>
	<%= f.button :submit, :class => "btn-custom2" %>
<% end %>

<script type="text/javascript">
	$('#rating-form').raty({
		path: '/assets/',
		scoreName: 'review[rating]'
	});
</script>