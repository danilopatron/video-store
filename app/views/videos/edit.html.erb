<div class="col-md-6 col-md-offset-3">
	<div class="edit-video-form">

		<h1>Edit Video</h1>

		<%= simple_form_for @video, :html => {:multipart => true} do |v| %>
			<%= v.select :category_id, @categories %>
			<%= v.file_field :video_img%>
			<%= v.input :name %>
			<%= v.input :description, label: "Video Name"  %>
			<%= v.input :director %>
			<%= v.button :submit, :class => "btn-custom2" %>
		<% end %>

	</div>
</div>